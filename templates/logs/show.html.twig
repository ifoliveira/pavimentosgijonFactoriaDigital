{% extends 'base.html.twig' %}

{% block title %}Ver Logs{% endblock %}

{% block body %}
    <h1>Ver Logs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Id_Log</th>
                <td>{{ log.IdLog }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ log.Fecha ? log.Fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ log.Descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('logs_index') }}">back to list</a>

    <a href="{{ path('logs_edit', {'id': log.id}) }}">edit</a>

    {{ include('logs/_delete_form.html.twig') }}
{% endblock %}
