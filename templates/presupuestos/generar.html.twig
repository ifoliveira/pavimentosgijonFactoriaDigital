{% extends 'pages.html.twig' %}
{% block cabecera %} Presupuestos {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Lista presupuestos</li>{% endblock %}
{% block title %}Lista presupuestos{% endblock %}
{% block tablas %}

                {% set total = 0 %}
                {% set numero = 1 %}
                                                  
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-body printableArea">

                            <div class="row">
                                     <div class="pull-left col-md-4">
                                        <img class="d-block img-fluid" src="{{ asset('img/Cabecera-A4.jpg') }}" alt="Cabecera A4">
                                    </div>
                                    <div class="col-md-8 pull-right text-right">
                                        <address class="pull-right text-right">
                                            <h3>To,</h3>
                                            <h4 class="font-bold">{{presupuesto.clientePe.nombreCl}} {{presupuesto.clientePe.apellidosCl}}</h4>
                                            <p class="text-muted ml-4">{{presupuesto.clientePe.direccionCl}}</p>
                                            <p class="mt-4"><b>Telefono :</b> <i class="fa fa-phone"></i> {{ presupuesto.clientePe.telefono1Cl }}</p>
                                            <p class="mt-4"><b>Fecha :</b> <i class="fa fa-calendar"></i> {{ "now"|date("m/d/Y") }}</p>
                                        </address>
                                    </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="table-responsive mt-5" style="clear: both;">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">#</th>
                                                    <th>Descripci√≥n</th>
                                                    <th class="text-right">Cantidad</th>
                                                    <th class="text-right">Coste unidad</th>
                                                    <th class="text-right">Total</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                            {% for detalle in presupuesto.ticket.detallecesta %}
                                                <tr>
                                                    <td class="text-center">{{ numero }}</td>
                                                    <td>{{ detalle.productoDc.descripcionPd }}</td>
                                                    <td class="text-right">{{ detalle.cantidadDc }} </td>
                                                    <td class="text-right"> {{ detalle.precioDc  |format_currency('EUR', locale='es')  }} </td>
                                                    <td class="text-right"> {{ (detalle.cantidadDc * detalle.precioDc ) |format_currency('EUR', locale='es')  }} </td>
                                                    {% set total = (detalle.cantidadDc * detalle.precioDc) + total %}  
                                                    {% set numero = numero + 1 %} 
                                                </tr>
                                             {% else %}
                                                 <tr>
                                                     <td colspan="8">no records found</td>
                                                 </tr>
                                             {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="pull-right mt-4 text-right">
                                        <p>Sub - Total : {{ (total) |format_currency('EUR', locale='es')  }}</p>
                                         <hr>
                                        <h1><b>Total :</b> {{ (total) |format_currency('EUR', locale='es')  }}</h1>
                                    </div>
                                    <div class="clearfix"></div>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="text-right">
                            <button class="btn btn-danger" type="submit"> Proceed to payment </button>
                            <button id="print" class="btn btn-default btn-outline" type="button"> <span><i class="fa fa-print"></i> Print</span> </button>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
{% endblock %}
{% block formulario %}{% endblock %}
{% block jscustom %}
    <!-- This Page JS -->
    <script src="{{ asset('dist/js/pages/samplepages/jquery.PrintArea.js') }}"></script>
    <script>
    $(function() {
        $("#print").click(function() {
            var mode = 'iframe'; //popup
            var close = mode == "popup";
            var options = {
                mode: mode,
                popClose: close
            };
            $("div.printableArea").printArea(options);
        });
    });
    </script>
{% endblock %}