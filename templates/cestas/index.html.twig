{% extends 'pages.html.twig' %}
{% block cabecera %} Tickets {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Tickets</li>{% endblock %}
{% block title %}Tickets{% endblock %}
{% block tablas %}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Footer callback -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Tickets</h4>
                                <h6 class="card-subtitle"></h6>
                                <div class="table-responsive">
                                    <table id="default_order" class="table table-striped table-bordered display"
                                        style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Estado</th>
                                                    <th>UserCs</th>
                                                    <th>FechaCs</th>
                                                    <th>ImporteTotCs</th>
                                                    <th>DescuentoCs</th>
                                                    <th>TipopagoCs</th>
                                                    <th>NumticketCs</th>
                                                    <th>TimestampCs</th>
                                                    <th>actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for cesta in cestas %}
                                                <tr>
                                                    <td>{{ cesta.id }}</td>
                                                    <td>{{ cesta.estadoCs }}</td>
                                                    <td>{{ cesta.userCs }}</td>
                                                    <td>{{ cesta.fechaCs ? cesta.fechaCs|date('Y-m-d') : '' }}</td>
                                                    <td align="right">{{ cesta.importeTotCs|format_currency('EUR', locale='en')  }}</td>
                                                    <td>{{ cesta.descuentoCs }}</td>
                                                    <td>{{ cesta.tipopagoCs }}</td>
                                                    <td> 
                                                        <a href ="/Tickets/{{ cesta.numticketCs }}" target="_blank" >{{ cesta.numticketCs }}</a>
                                                    </td>
                                                    <td>{{ cesta.timestampCs ? cesta.timestampCs|date('Y-m-d H:i:s') : '' }}</td>
                                                    <td>

                                                        {{ include('cestas/_delete_form.html.twig') }}

                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="9">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                         <a href="{{ path('cestas_new') }}">Create new</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

{% block formulario %}{% endblock %}

{% block jscustom %}

    <!--This page plugins -->
    <script src="../../assets/libs/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="../../dist/js/pages/datatable/custom-datatable.js"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-advanced.init.js') }}"></script>
    
    <!--Custom JavaScript -->
    
    <script language = "javascript">
    $(document).ready(function(){   
        /****************************************
        *       Default Order Table           *
        ****************************************/
        $('#default_order').DataTable({
            "order": [
                [2, "desc"],[0,"desc"]
            ]
        });


      });  
   </script> 
{% endblock %}