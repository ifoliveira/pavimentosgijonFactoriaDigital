{% extends 'pages.html.twig' %}
{% block cabecera %} Tickets {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Efectivo</li>{% endblock %}
{% block title %}Tickets{% endblock %}
{% block tablas %}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Footer callback -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Tickets</h4>
                                <h6 class="card-subtitle"></h6>
                                <div class="table-responsive">
                                    <table id="default_order" class="table table-striped table-bordered display">
                                            <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>CantidadDc</th>
                                                    <th>PvpDc</th>
                                                    <th>DescuentoDc</th>
                                                    <th>TimestampDc</th>
                                                    <th>cestaDc</th>
                                                    <th>actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for detallecestum in detallecestas %}
                                                <tr>
                                                    <td>{{ detallecestum.id }}</td>
                                                    <td>{{ detallecestum.cantidadDc }}</td>
                                                    <td>{{ detallecestum.pvpDc }}</td>
                                                    <td>{{ detallecestum.descuentoDc }}</td>
                                                    <td>{{ detallecestum.timestampDc ? detallecestum.timestampDc|date('Y-m-d H:i:s') : '' }}</td>
                                                    <td>{{ detallecestum.cestaDc }}</td>
                                                    <td>
                                                        <a href="{{ path('detallecesta_show', {'id': detallecestum.id}) }}">show</a>
                                                        <a href="{{ path('detallecesta_edit', {'id': detallecestum.id}) }}">edit</a>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="6">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>

                                         <a href="{{ path('detallecesta_new') }}">Create new</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

{% block formulario %}{% endblock %}

{% block jscustom %}

    <!--This page plugins -->
    <script src="../../assets/libs/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="../../dist/js/pages/datatable/custom-datatable.js"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-advanced.init.js') }}"></script>
    
    <!--Custom JavaScript -->
    
    <script language = "javascript">
    $(document).ready(function(){   
        /****************************************
        *       Default Order Table           *
        ****************************************/
        $('#default_order').DataTable({
            "order": [
                [2, "desc"]
            ]
        });

      });  
   </script> 
{% endblock %}
