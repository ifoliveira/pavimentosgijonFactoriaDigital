      <th>PVP</th>
      <th>Cantidad</th>
      <th>Tipo</th>
      <th>Guardar</th>
    </tr>
  </thead>
  <tbody>
    {% for form in productos_forms %}
      <tr>
        {{ form_start(form, { attr: { class: 'd-inline' } }) }}
          <td>{{ form_widget(form.descripcion_Pd) }}</td>
          <td>{{ form_widget(form.precio_Pd) }}</td>
          <td>{{ form_widget(form.pvp_Pd) }}</td>
          <td>{{ form_widget(form.stock_Pd) }}</td>
          <td>{{ form_widget(form.tipo_pd_id) }}</td>
          <td>
            <button class="btn btn-sm btn-success">ðŸ’¾</button>
