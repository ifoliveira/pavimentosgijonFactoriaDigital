{% extends 'inicio2.html.twig' %}
{% block eltiempo %} {% endblock %}
{% block cabecera %} Efectivo {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Efectivo</li>{% endblock %}
{% block title %}Subir Factura{% endblock %}
{% block cardbody1 %}
<h1>Subir Factura PDF</h1>

  <form method="post" enctype="multipart/form-data">
    <div>
      <label for="factura">Selecciona un archivo PDF:</label>
      <input type="file" id="factura" name="factura" accept="application/pdf" required>
    </div>
    <div>
      <label>
        <input type="checkbox" name="usar_imagen" value="1">
        Procesar como imagen (OCR con JPG)
      </label>
    </div>    
    <button type="submit">Procesar</button>
  </form>
  <a href="{{ path('factura_nueva') }}" class="btn btn-warning">Nueva factura</a>
  {% if pdfFilename %}
    <hr>
    <h2>Vista previa y vencimientos</h2>
    <div style="display: flex; gap: 2rem;">
      <div style="flex: 1; border: 1px solid #ccc; padding: 10px;">
        <h3>Vista previa PDF</h3>
        <embed src="{{ asset('var/facturas/' ~ pdfFilename) }}" type="application/pdf" width="100%" height="600px">
      </div>
      <div style="flex: 1;">
        <h3>Formularios por vencimiento</h3>
        {% if form_loop is defined and form_loop|length > 0 %}
          {% for form in form_loop %}
            <div class="card mb-3">
              {{ form_start(form) }}
                <div class="card-body">
                  {{ form_row(form.conceptoFr) }}
                  {{ form_row(form.fechaFr) }}
                  {{ form_row(form.importeFr) }}
                  {{ form_row(form.origenFr) }}
                  {{ form_row(form.tipoFr) }}
                  <div class="form-group text-left">
                    <button type="submit" class="btn btn-info">Guardar</button>
                  </div>
                </div>
              {{ form_end(form) }}
            </div>
          {% endfor %}
        {% else %}
          <p>No hay vencimientos detectados.</p>
        {% endif %}
      </div>
    </div>

<hr>
    <h2>Productos detectados</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>DescripciÃ³n</th>
