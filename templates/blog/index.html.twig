    <div class="inner-page-title-c">
      <h1>Blog Reformas de baños</h1>
      <div class="breadcrumb-box"> 
        <!-- breadcrumb -->
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage')}}"><i class="bi bi-house"></i> Inico</a></li>
          <li class="breadcrumb-item active" aria-current="page">Blog</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- ================ inner page header end ================ --> 

<!-- ================ Blog area ================ -->
<div class="blog-area pt-70 pb-40">
  <div class="container">
    <div class="inner-page-title-c">
      <h2> Artículos sobre reformas de baños </h2>
      <br>
    </div>  
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">
    
    {% for post in posts %}

        {% set blogImage = post.images|filter(image => image.imageType == 'blog')|first %}
        {% set fecha = post.publishedAt|date('j F') %}
        {% set mes_en = post.publishedAt|date('F') %}

    <!-- blog item -->
      <div class="col mb-30"> 
         <div class="blog-item">
          <div class="blog-item-img"><img src="{{ asset('/Light-HTML/img/blog/'~ blogImage.filePath)}}" alt="{{blogImage.alt}}"> <a href="{{ path('blog_show', {'slug': post.slug})}}" class="read-more"><i class="bi bi-arrow-right"></i></a> 
          </div>
          <div class="blog-item-content">
              <h6><a href="{{ path('blog_show', {'slug': post.slug})}}">{{post.headerH3}}</a></h6>
              <p>{{post.headerH4}}</p>
              <ul class="list-inline">
                <li class="list-inline-item"><a href="{{ path('homepage')}}"><strong>By:</strong> Pav. Gijón</a></li>
                <li class="list-inline-item"><a href="{{ path('integral')}}"><strong>Tag:</strong> Integrales</a></li>
                <li class="list-inline-item"><a ><strong>Post:</strong> {{ post.publishedAt|date('j') }} {{ meses[mes_en] }}, <span class="current-year"></span></a></li>
              </ul>
          </div>
        </div>
        </div>

        {% if loop.index % 3 == 0 and not loop.last %}
            </div>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1">  
        {% endif %}
    {% endfor %}
      </div>
    </div>    
  </div>
</div>
<!-- ================ Blog area end ================ --> 

