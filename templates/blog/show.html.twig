<!DOCTYPE html>
<html lang="es">
{% set headerImage = post.images|filter(image => image.imageType == 'header')|first %}
{% set ogimage = post.images|filter(image => image.imageType == 'ogimage')|first %}
{% set meses = {'January': 'Enero', 'February': 'Febrero', 'March': 'Marzo', 'April': 'Abril', 'May': 'Mayo', 'June': 'Junio', 'July': 'Julio', 'August': 'Agosto', 'September': 'Septiembre', 'October': 'Octubre', 'November': 'Noviembre', 'December': 'Diciembre'} %}
{% set fecha = post.publishedAt|date('j F') %}
{% set mes_en = post.publishedAt|date('F') %}

<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta content="reformas de baños, Gijón, diseño de baños, remodelación de cuartos de baño, accesorios de baños, decoración de interiores, presupuesto gratuito, azulejos para baños, platos de ducha, sanitarios, grifería de baño, instalación de bañeras, renovación de cuartos de baño, expertos en baños, calidad en reformas." name="keywords">
<meta content="{{post.metaDescription}}" name="description">
{% if headerImage %}
  <meta property="og:image" content="https://www.pavimentosgijon.es/assets/images/" ~ ogimage.filePath /> 
{% else %}
  <meta property="og:image" content="https://www.pavimentosgijon.es/assets/images/logo.png" /> 
{% endif %}
<meta property="og:title" content="{{post.title}}"/>
<meta property="og:url" content="https://www.pavimentosgijon.es/" />
<meta property="og:site_name" content="Blog reformas de baño" />
<meta property="og:type" content="mainpage" />

<!-- page title -->
<title> {{ post.title }}</title>
<!-- favicon -->
<link rel="icon" type="image/png" sizes="16x16" href="{{ asset('/img/favicon.png')}}">
<!-- bootstrap core CSS -->
<link href="{{ asset('/Light-HTML/css/bootstrap.min.css')}}" rel="stylesheet" >
<!-- bootstrap icons -->
<link href="{{ asset('/Light-HTML/css/bootstrap-icons.css')}}" rel="stylesheet">
<!-- owl carousel -->
<link href="{{ asset('/Light-HTML/css/owl.carousel.min.css')}}" rel="stylesheet">
<link href="{{ asset('/Light-HTML/css/owl.theme.default.min.css')}}" rel="stylesheet">
<!-- venobox css -->
<link href="{{ asset('/Light-HTML/css/venobox.css')}}" rel="stylesheet">
<!-- custom styles for this template -->
<link href="{{ asset('/Light-HTML/css/custom.css')}}" rel="stylesheet">
<link href="{{ asset('/Light-HTML/css/responsive.css')}}" rel="stylesheet">
<link href="{{ asset('/Light-HTML/css/helper.css')}}" rel="stylesheet">
</head>

<body>
<!-- ================ Preloader ================ -->
<div id="preloader">
  <div class="spinner-grow" role="status"> <span class="visually-hidden">Loading...</span> </div>
</div>
<!-- ================ Preloader end ================ --> 

<!-- ================ Header ================ -->
  {% include 'apgijon/header.html.twig' %}
<!-- ================ Header end ================ -->   

<!-- ================ inner page header ================ -->
<div class="inner-page-title inner-page-header-bg">
  <div class="container">
    <div class="inner-page-title-c">
      <h1>{{ post.headerH1 }}</h1>
      <div class="breadcrumb-box"> 
        <!-- breadcrumb -->
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('homepage')}}"><i class="bi bi-house"></i> Inicio</a></li>
          <li class="breadcrumb-item active" aria-current="page">{{ post.title }}</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- ================ inner page header end ================ --> 

<!-- ================ Blog post page ================ -->
<div class="blog-post-page pt-70 pb-40">
  <div class="container">
    <div class="inner-page-title-c">
      <h2>{{ post.headerH2 }}</h2>
      <br>
    </div>   
    <div class="row">
    <div class="col-lg-3">
        <aside> 
          <!-- sidebar widget -->
          <div class="s-sidebar-widget mb-30">
            <h3>Pídenos presupuesto</h3>
          <!-- sidebar contcat -->
            <div class="sidebar-contcat">        
              <!-- contact form -->

              {{ form_start(form, {'attr' : { 'class': 'contact-form'}}) }}
              <!--<form class="contact-form" id="contact-form" method="post" action="contact.php" enctype="multipart/form-data">-->
                <div class="row">
                    <div class="mb-3">
          
                      <input type="text" class="form-control" name="{{ field_name(form.nombre)}}" placeholder="{{ field_label(form.nombre)}}" required data-error="Nombre no informado.">
                      <div class="help-block with-errors"></div>
                    </div>
                    <div class="mb-3">
                      <input type="email" class="form-control" name="{{ field_name(form.email)}}" placeholder="{{ field_label(form.email)}}" required data-error="Email is required.">
                      <div class="help-block with-errors"></div>
                    </div>

                </div>
                
                <div class="mb-3">
                  <input type="text" placeholder="{{ field_label(form.telefono)}}" name="{{ field_name(form.telefono)}}" class="form-control" required data-error="Phone is required.">
                  <div class="help-block with-errors"></div>
                </div>
                <div class="mb-3">
                  <textarea class="form-control" rows="3" name="{{ field_name(form.pregunta)}}" placeholder="{{ field_label(form.pregunta)}}" required data-error="Message is required."></textarea>
                  <div class="help-block with-errors"></div>
                </div>
                <div class="call-us-widget">
                  <button type="submit" id="consultas_submit"  class="save btn btn-style-1 w-100">Pedir presupuesto</button>
                </div>
                {{ form_end(form) }}
              <!-- contact form end --> 
            </div>
            <!-- sidebar contcat end --> 
          </div>
          <!-- sidebar widget end --> 
          
          <!-- sidebar widget -->
          <div class="s-sidebar-widget mb-30">
            <h3>Necesitas ayuda!</h3>
            <!-- call us widget -->
            <div class="call-us-widget">
              <ul class="mb-20">
                <li>También puedes escribirnos un mail a la dirección.</li>
                <a href="mailto:buzon@pavimentosgijon.es"><p>buzón@pavimentosgijon.es</p></a>
              </ul>
              <a href="mailto:buzon@pavimentosgijon.es" class="btn-style-1 w-100">Enviar Mail</a> </div>
            <!-- call us widget end --> 
          </div>
          <!-- sidebar widget end --> 
        </aside>
      </div>          
      <div class="col-lg-9"> 
        <!-- blog post content -->
        <div class="blog-post-content mb-40">
        {% if headerImage %}
          <div class="blog-post-img mb-20"><img src="{{ asset('/Light-HTML/img/blog/'~ headerImage.filePath)}}" alt="{{headerImage.alt}}">
        {% endif %}
            <ul class="list-inline blog-post-meta">
              <li class="list-inline-item"><a href="#">{{ post.publishedAt|date('j') }} {{ meses[mes_en] }}, <span class="current-year"></span></a></li>
              <li class="list-inline-item"><a href="#">Plato de ducha</a></li>
              <li class="list-inline-item"><a href="#"><i class="bi bi-chat-right-dots"></i> 0</a></li>
            </ul>
          </div>
          <h6 class="mb-20">{{post.headerH3}}</h6>
            {{post.content |raw}}
      </div>
      
    </div>
  </div>
</div>
<!-- ================ Blog post page end ================ --> 


<!-- ================ Footer area ================ -->
  {% include 'apgijon/footer.html.twig' %}
<!-- ================ Footer area end ================ --> 
