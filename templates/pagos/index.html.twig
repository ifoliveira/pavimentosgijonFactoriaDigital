        $('#default_order2').DataTable({
            "order": [
                [2, "desc"]
            ]
     
        });

        /****************************************
        *       Default Order Table           *
        ****************************************/
        $('#default_order').DataTable({
            "destroy" :true,
            "order": [
                [2, "asc"]
            ]
        }); 
  

      });  
   </script> 
