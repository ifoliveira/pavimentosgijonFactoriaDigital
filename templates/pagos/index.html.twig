{% extends 'inicio2.html.twig' %}
{% block eltiempo %} {% endblock %}
{% block cabecera %} Forecast {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Forecast</li>{% endblock %}
{% block title %}Forecast{% endblock %}
{% block cardbody1 %}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Footer callback -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title">Conciliaciones propuestas</h3>
                                <h6 class="card-subtitle">Conciliaciones propuestas</h6>
                                <div class="table-responsive">
                                    <table id="default_order" class="table table-striped table-bordered display"
                                        style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>Pago</th>
                                                    <th>Banco</th>
                                                    <th>Conciliar</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% set pagoshuerfanos = [] %}
                                                {% set bancoshuerfanos = [] %}
                                                {% for banco in bancos %}
                                                        {% set bancoshuerfanos = [{"id" : banco.id, "text" :  banco.fechaBn|date('Y-m-d')  ~ ' Importe : ' ~  banco.importeBn|format_currency('EUR', locale='es')  }]|merge(bancoshuerfanos) %}
                                                {% endfor %}                                                 

                                                {% for pago in pagos %}
                                                    {% set encontrado = false %}
                                                    <tr>
                                                        {% for banco in bancos %}
                                                            {% if pago.importePg == banco.importeBn %}
                                                                <td> {{pago.fechaPg ? pago.fechaPg|date('Y-m-d') : ''}} - {{ pago.importePg|format_currency('EUR', locale='es') }}</td>
                                                                <td> {{banco.fechaBn ? banco.fechaBn|date('Y-m-d') : ''}} - {{ pago.importePg|format_currency('EUR', locale='es') }} -  {{banco.conceptoBn}} </td>
                                                                <td>
                                                                    <a onclick= "conciliarAjax( {{banco.id}}, 'conciliar/{{pago.id}}')" class="text-inverse pr-2" data-toggle="tooltip" title="Conciliar"><i class="ti-link"></i></a> 
                                                                </td>
                                                                {% set encontrado = true %}
                                                            {% endif %}    
                                                        {% endfor %}

                                                        {% if encontrado == false %}
                                                                {% set pagoshuerfanos = [{"id" : pago.id, "text" :  pago.fechaPg|date('Y-m-d')  ~ ' Importe : ' ~  pago.importePg|format_currency('EUR', locale='es')  }]|merge(pagoshuerfanos) %}
                                                        {% endif %}
                                                    </tr>
                                                {% else %}
                                                    <tr>
                                                        <td colspan="7">no records found</td>
                                                    </tr>
                                                {% endfor %}
                                                <div data-entry-info='{{pagoshuerfanos ? pagoshuerfanos|json_encode|raw : null }}'>
                                                <div data-entry-info2='{{bancoshuerfanos ? bancoshuerfanos|json_encode|raw : null }}'>
                                                   
                                            </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Column -->
                    <div class="col-md-6 col-lg-6">
                        <div class="card">
                            <div class="card-body">
                            <h4 class="card-title">Pagos pendientes de conciliar</h4>
                            <h6 class="card-subtitle lh-base">
                            </h6>
                            <select
                                class="form-control"
                                id="select2-data-array"
                                style="width: 100%; height: 36px"
                            ></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Banco pendiente de conciliar</h4>
                                <h6 class="card-subtitle lh-base">
                                </h6>
                                <select
                                    class="form-control"
                                    id="select3-data-array"
                                    style="width: 100%; height: 36px"
                                ></select>
                             </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="card">
                        <button type="submit" class="btn btn-rounded btn-outline-success" onclick="conciliar()">Conciliar</button>
                    </div>
                </div>
    
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

