
{% extends 'inicio2.html.twig' %}
{% block eltiempo %} {% endblock %}
{% block cabecera %} Efectivo {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Efectivo</li>{% endblock %}
{% block title %}Logs{% endblock %}
{% block cardbody1 %}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Footer callback -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Movimientos</h4>
                                    <p>Fecha vencimiento {{ text.fechaVencimiento }}</p>
                                    <p>Importe Total {{ text.importeTotal}}</p>   
                                    <button onclick="insertarForecast({{ text|json_encode() }}, this)">Insertar</button>                             
                                <h6 class="card-subtitle"></h6>
                                <div class="table-responsive">
                                    <table id="tbprod" class="table table-striped table-bordered display"
                                        style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>codigo</th>
                                                    <th>cantidad</th>
                                                    <th>descripcion</th>
                                                    <th>precio</th>
                                                    <th>descuento</th>
                                                    <th>preciofinal</th>
                                                    <th>actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for producto in text.producto %}
                                                <tr>
                                                    <td>{{ producto.codigo }}</td>
                                                    <td>{{ producto.cantidad }}</td>
                                                    <td>{{ producto.descripcion }}</td>
                                                    <td>{{ producto.precio }}</td>
                                                    <td>{{ producto.precio2 }}</td>
                                                    <td>{{ producto.precio3 }}</td>                                                    
                                                    <td><button onclick="insertarProducto({{ producto|json_encode() }}, this)">Insertar</button></td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="5">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        <tfoot>

                                        </tfoot>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

{% block formulario %}{% endblock %}
{% block jscustom %}
    <!--This page plugins -->
    <script src="{{ asset('assets/extra-libs/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/extra-libs/datatables.net-bs4/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-basic.init.js') }}"></script>

    <script>
        function insertarProducto(producto, elementoBoton) {
            fetch('/admin/ocr/insertar', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // Aquí puedes agregar más cabeceras si es necesario
                },
                body: JSON.stringify(producto)
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                // Marcar la fila como insertada
                    elementoBoton.closest('td').innerHTML = 'INSERTADO';
            })                

            .catch((error) => {
                console.error('Error:', error);
            });
        }

        function insertarForecast(producto, elementoBoton) {
            elementoBoton.disabled = true;
            fetch('/admin/ocr/forecast', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    // Aquí puedes agregar más cabeceras si es necesario
                },
                body: JSON.stringify(producto)
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                // Marcar la fila como insertada
                   
            })                

            .catch((error) => {
                console.error('Error:', error);
                 elementoBoton.disabled = false;
            });
        }        
    </script>

{% endblock %}
