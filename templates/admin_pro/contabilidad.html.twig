                                            </div>
                                            <div class="ms-auto align-self-center">
                                            <h2 class="font-weight-medium mb-0">{{pendiente|format_currency('EUR', locale='es')}} </h2>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>                                                              
                    </div>                                                     

