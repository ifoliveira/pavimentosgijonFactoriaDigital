                                                            <div class="row">
                                                                <div class="col-sm-12 col-md-2">
                                                                    <div>
                                                                        {{ form_label(mano.categoriaMo, 'Categoria', {label_attr: { class: 'control-label col-form-label col-sm-12'}})}}
                                                                        {{ form_errors(mano.categoriaMo) }}
                                                                        {{ form_widget(mano.categoriaMo, {'attr':{'class': 'typeahead form-control',  'placeholder':'Texto'}} )}}
                                                                        {{ form_help(mano.categoriaMo) }}
                                                                    </div>
                                                                </div>
                                                                <div class="col-sm-12 col-md-2">
                                                                    <div>
                                                                        {{ form_label(mano.tipoMo, 'Descripcion', {label_attr: { class: 'control-label col-form-label col-sm-12'}})}}
                                                                        {{ form_errors(mano.tipoMo) }}
                                                                        {{ form_widget(mano.tipoMo, {'attr':{'class': 'typeahead form-control',  'placeholder':'Texto'}} )}}
                                                                        {{ form_help(mano.tipoMo) }}
                                                                    </div>
                                                                </div>
                                                                <div class="col-sm-12 col-md-8">
                                                                    <div>
                                                                        {{ form_label(mano.textoMo, 'Descripción larga', {label_attr: { class: 'control-label col-form-label col-sm-12'}})}}
