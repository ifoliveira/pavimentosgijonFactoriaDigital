                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 col-lg-6">
                                <div class="card">
                                    <form action="" method="POST">
                                    {{ form_row(form._token) }}
                                        <div class="card-body">
                                            <h6 class="card-subtitle"></code></h6>
                                          <div class="card-body">
                                                    
                                                 </div>
                                            <div class="action-form">
                                                <div class="form-group mb-0 text-left">
                                                    <button type="submit"  class="btn btn-info waves-effect waves-light">{{ button_label|default('Nuevo') }}</button>
                                                    <a href="{{ path("presupuestos_show" , {'id': presupuesto[0].id}) }}" target=""  class="btn btn-rounded btn-outline-danger "> Volver a presupuesto</a>
                                                </div>
                                            </div>
                                        </div>
                                        <hr>
                                        {# reproduce únicamente los campos task: descripción #}
                                        <div class="card-body">

                                                        {% for mano in form.manoObra|reverse %}
