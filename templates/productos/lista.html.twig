{% extends 'pages.html.twig' %}
{% block cabecera %} Productos {% endblock %}
{% block breadcrumb %} <li class="breadcrumb-item active">Productos</li>{% endblock %}
{% block title %}Productos{% endblock %}
{% block tablas %}
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Footer callback -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Productos</h4>
                                <h6 class="card-subtitle"></h6>
                                <div class="table-responsive">
                                    <table id="default_order" class="table table-striped table-bordered display"
                                        style="width:100%">
                                         <thead>
                                             <tr>
                                                 <th>Id</th>
                                                 <th>tipo</th>        
                                                 <th>Descripcion</th>
                                                 <th>Precio</th>
                                                 <th>PVP</th>
                                                 <th>Stock</th>
                                                 <th>Acciones</th>
                                             </tr>
                                         </thead>
                                         <tbody>
                                             {% for producto in productos %}
                                                 <tr>
                                                     <td>{{ producto.id }}</td>
                                                     <td>{{ producto.tipoPdId}}</td>
                                                     <td>{{ producto.descripcionPd }}</td>
                                                     <td align="right">{{ producto.precioPd|format_currency('EUR', locale='sp') }}</td>
                                                     <td align="right">{{ producto.pvpPd|format_currency('EUR', locale='sp') }}</td>
                                                     <td>{{ producto.stockPd }}</td>
                                                     <td>
                                                        <a href="{{ path('productos_edit', {'id': producto.id}) }}">Editar</a>
                                                     </td>
                                                 </tr>
                                             {% else %}
                                                 <tr>
                                                     <td colspan="8">no records found</td>
                                                 </tr>
                                             {% endfor %}
                                         </tbody>
                                         <tfoot>
                                             <tr>
                                                 <th>Id</th>
                                                 <th>tipo</th>        
                                                 <th>Descripcion</th>
                                                 <th>Precio</th>
                                                 <th>PVP</th>
                                                 <th>Stock</th>
                                             </tr>
                                         </tfoot>
                                        </table>

                                         <a href="{{ path('productos_new') }}">Create new</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
{% endblock %}

{% block formulario %}{% endblock %}

{% block jscustom %}

    <!--This page plugins -->
    <script src="../../assets/libs/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="../../dist/js/pages/datatable/custom-datatable.js"></script>
    <script src="{{ asset('dist/js/pages/datatable/datatable-advanced.init.js') }}"></script>
    
    <!--Custom JavaScript -->
    
    <script language = "javascript">
    $(document).ready(function(){   
        /****************************************
        *       Default Order Table           *
        ****************************************/
        $('#default_order').DataTable({
            "order": [
                [0, "asc"],
            ]
        });


      });  
   </script> 
{% endblock %}